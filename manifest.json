{
    "name": "Flask Git",
    "id": "flask_git",
    "packaging_format": 1,
    "description": {
        "en": "Easily install and manage a Flask app from a git repository.",
        "fr": "Installez et gérez facilement une app Flask depuis un répertoire git."
    },
    "version": "0.1~ynh1",
    "url": "https://example.com",
    "upstream": {
        "license": "free",
        "website": "https://example.com",
        "demo": "https://demo.example.com",
        "admindoc": "https://yunohost.org/packaging_apps",
        "userdoc": "https://yunohost.org/apps",
        "code": "https://some.forge.com/example/example"
    },
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com"
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/flaskapp",
                "default": "/flaskapp"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "git_url",
                "ask": {
                  "en": "Custom app git repository URL",
                  "fr": "URL du répertoire git de l'app personnalisée"
                },
                "example": "https://domain.tld/path/to/app",
                "pattern": {
                  "regexp": "^https:\\/\\/[a-zA-Z0-9-_.]+\\/[a-zA-Z0-9-_./]+\\/[a-zA-Z0-9-_.]+(\\/?(-\\/)?tree\\/[a-zA-Z0-9-_]+)?(\\.git)?\\/?$",
                  "error": {
                    "en": "App repository URLs are expected to look like <code>https://domain.tld/path/to/app</code>",
                    "fr": "Les URL de répertoire git doivent ressembler à <code>https://domaine.tld/chemin/vers/app</code>"
                  }
                },
                "help": {
                  "en": "Must be a valid git repository.",
                  "fr": "Doit être un lien valide vers un répertoire git."
                }
            },
            {
                "name": "git_branch",
                "ask": {
                  "en": "Custom app git repository branch",
                  "fr": "branche du répertoire git de l'app personnalisée"
                },
                "default": "master"
            },
            {
                "name": "admin_route",
                "type": "path",
                "ask": {
                  "en": "Add an sso protected route",
                  "fr": "Définir une route protégée par le sso."
                },
                "example": "/myadmin",
                "help": {
                  "en": "Consider using a less common route than `/admin`.",
                  "fr": "Préférez utiliser une route moins commune que `/admin`"
                }
            }
        ]
    }
}
